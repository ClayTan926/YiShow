<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myblack">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_gravity="center|top"
        android:layout_marginEnd="28dp"
        android:layout_marginStart="28dp"
        app:cardCornerRadius="10dp"
        android:layout_alignParentTop="true"
        android:layout_margin="65dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <cn.tzl.yishow.view.AvatarImageView
                android:id="@+id/headportrait"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                android:src="@mipmap/avaterimage"
                android:paddingTop="8dp"
                android:layout_marginStart="8dp"/>
            <!--<de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:paddingTop="8dp"
                android:src="@mipmap/avaterimage"
                app:civ_border_color="@color/myblack"
                app:civ_border_width="1dp" />
-->
            <TextView
                android:id="@+id/tv_onclick_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/hint_login"
                android:textColor="@color/myblack"
                android:textSize="16sp"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="12dp"
        android:background="@color/mywhite"
        android:orientation="vertical"
        android:padding="25dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_myCollection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:text="@string/text_myCollection"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mygray"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="41dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_margin="5dp"
            android:text="@string/text_myCollocation"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mygray"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="41dp" />

        <TextView
            android:id="@+id/tv_helpAndFeedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_margin="5dp"
            android:text="@string/text_helpAndFeedback"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mygray"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="41dp" />

        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_margin="5dp"
            android:text="@string/text_setting"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mygray"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="41dp" />

        <TextView
            android:id="@+id/tv_quit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_margin="5dp"
            android:text="@string/text_quit"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>
