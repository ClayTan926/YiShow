<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="65dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_displayAvater"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:padding="5dp"
                    app:civ_border_color="@color/gray"
                    app:civ_border_width="1dp" />

                <TextView
                    android:id="@+id/tv_displayUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_toEndOf="@+id/iv_displayAvater" />

                <TextView
                    android:id="@+id/tv_displayPostTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/iv_displayAvater" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_displayContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingEnd="5dp"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_displayPhoto"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:scaleType="fitCenter"
                android:contentDescription="@null" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/icon_displayComment"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_toStartOf="@+id/tv_displayComment"
                    android:contentDescription="@null"
                    android:src="@drawable/comment" />

                <TextView
                    android:id="@+id/tv_displayComment"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/icon_displayLike"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/icon_displayLike"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_toStartOf="@+id/tv_displayLike"
                    android:contentDescription="@null"
                    android:src="@drawable/like" />

                <TextView
                    android:id="@+id/tv_displayLike"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="center" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>