<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:padding="@dimen/itemPaddingS"
    app:cardCornerRadius="10dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mywhite"
    android:orientation="vertical"
  >

    <TextView
        android:id="@+id/item_home_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/itemPaddingS"
        android:paddingEnd="8dp"
        android:paddingStart="@dimen/itemPadding"
        android:paddingTop="@dimen/itemPadding"
        android:text="标题"
        android:textSize="@dimen/fontSizeS"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_home_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:gravity="start"
        android:maxEms="50"
        android:maxLines="3"
        android:minLines="1"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="这是文字内容"
        android:textColor="@color/hint_gray"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/iv_showImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:scaleType="fitCenter"
        android:visibility="visible" />

    <TextView
        android:id="@+id/item_home_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:padding="@dimen/itemPaddingS"
        android:text="@string/example_time"
        android:textColor="@color/gray"
        android:textSize="12sp" />
</LinearLayout>
</android.support.v7.widget.CardView>


