<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mywhite"
    >
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_about"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <android.support.design.widget.AppBarLayout
            android:id="@+id/comment_appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/myblack"
                android:paddingBottom="15dp"
                android:paddingTop="20dp">

                <ImageView
                    android:id="@+id/iv_setting_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_white_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/text_setting"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/fontSizeL" />
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:layout_marginTop="15dp"
            android:paddingTop="50dp"
            android:orientation="vertical"
            android:background="@color/mywhite">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_selectable_item_white_alphablack"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:tag="cmd://introduce/">

                <TextView
                    android:layout_marginLeft="30dp"
                    style="@style/DiscoveryTextStyle"
                    android:layout_alignParentLeft="true"
                    android:text="新消息提醒" />
                <Switch
                    android:id="@+id/switch_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="40dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mywhite"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:src="#e6e6e6" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_selectable_item_white_alphablack"
                android:gravity="center_vertical"
                android:tag="cmd://check_new_version/">

                <TextView
                    android:layout_marginLeft="30dp"
                    style="@style/DiscoveryTextStyle"
                    android:layout_alignParentLeft="true"
                    android:text="声音" />
                <Switch
                    android:id="@+id/switch_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="40dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mywhite"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:src="#e6e6e6" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_selectable_item_white_alphablack"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:tag="cmd://check_new_version/">

                <TextView
                    android:layout_marginLeft="30dp"
                    style="@style/DiscoveryTextStyle"
                    android:layout_alignParentLeft="true"
                    android:text="振动" />
                <Switch
                    android:id="@+id/switch_shake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="40dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>

