<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.tzl.yishow">

    <uses-feature android:name="android.hardware.camera.autofocus" />
    <!-- 照相机 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- 允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 获取GSM（2g）、WCDMA（联通3g）等网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- 获取sd卡写的权限，用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 读取设备外部存储空间 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- 允许读取手机状态 用于创建BmobInstallation -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 允许挂载和反挂载文件系统可移动存储 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/cover"
        android:label="@string/app_name"
        android:roundIcon="@drawable/cover"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name="base.BaseActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity android:name=".HelpActivity"/>
        <activity
            android:name=".module_Login.activity.RegisterActivity" />
        <activity
            android:name=".module_Login.activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".Home_todayPushActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".MainActivity" />
        <activity
            android:name=".module_Measure.Home_measureActivity" />
        <activity android:name=".HotActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="cn.tzl.yishow.more" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".UserInfoActivity"/>
        <activity
            android:name=".module_Measure.ShowDataActivity"
            android:launchMode="singleTask"/>
        <activity
            android:name=".WelcomeActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".module_Ar.ARActivity"
            android:configChanges="keyboardHidden|orientation|screenSize">

            <!-- IMAGE_CAPTURE  返回Bitmap or 图片文件 -->
            <intent-filter>
                <action android:name="android.media.action.IMAGE_CAPTURE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".NewCommentActivity"></activity>
    </application>

</manifest>